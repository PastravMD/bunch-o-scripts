#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=always'
PROMPT_DIRTRIM=5
PS1='\[\e[1;32m\]\w \$ \[\e[0m\]'

# infinite  history
export HISTFILESIZE=
export HISTSIZE=
export HISSTIMEFORMAT="[%F %T] "
export HISTFILE=~/.bash_infinite_history
PROMPT_COMMAND="history -a; $PROMPT_COMMAND"
